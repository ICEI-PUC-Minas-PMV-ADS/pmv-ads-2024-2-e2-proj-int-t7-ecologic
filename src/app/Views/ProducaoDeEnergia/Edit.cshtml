@model app.Models.ProducaoDeEnergiaViewModel

@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Editar Produção de Energia";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div style="max-width: 400px;">
    <div>
        <form asp-action="Edit" method="post" novalidate>
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="UsinaId" class="form-label">Usina</label>
                    <select asp-for="UsinaId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Usinas, "Id", "Nome"))" required>
                        <option value="">Selecione uma usina</option>
                    </select>
                    <span asp-validation-for="UsinaId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataProducao" class="form-label"></label>
                    <input asp-for="DataProducao" class="form-control" required />
                    <span asp-validation-for="DataProducao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnergiaGeradaKW" class="form-label"></label>
                    <input asp-for="EnergiaGeradaKW" class="form-control" required />
                    <span asp-validation-for="EnergiaGeradaKW" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EficienciaOperacional" class="form-label"></label>
                    <input asp-for="EficienciaOperacional" class="form-control" required />
                    <span asp-validation-for="EficienciaOperacional" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary flex-grow-1">Salvar</button>
                    <a asp-action="Index" class="btn btn-secondary flex-grow-1">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

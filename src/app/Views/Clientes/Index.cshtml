@model IEnumerable<app.Models.Entities.Cliente>



@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Clientes";
}

@if (!Model.Any())
{
    <p>Nenhum cliente encontrado.</p>
}
else
{
    <h1>Clientes</h1>

    <a asp-action="Add" class="btn btn-primary mb-3">Adicionar</a>

    <table class="table table-striped">

    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF/CNPJ</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var cliente in Model)
            {
                <tr>

                   
                    <td>@cliente.Nome</td>
                    <td>@cliente.CpfCnpj</td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

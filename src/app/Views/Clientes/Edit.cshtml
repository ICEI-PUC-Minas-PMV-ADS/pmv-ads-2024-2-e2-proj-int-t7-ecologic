@model app.Models.EditClienteViewModel

@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="mb-4">Editar Cliente</h1>

<form asp-action="Edit" style="max-width: 400px;" novalidate>
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="CpfCnpj" class="form-label"></label>
        <input asp-for="CpfCnpj" class="form-control" required />
        <span asp-validation-for="CpfCnpj" class="text-danger"></span>
    </div>
    
    <div class="mb-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary w-100">Salvar</button>

        <a asp-action="Index" class="btn btn-secondary w-100">Cancelar</a>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

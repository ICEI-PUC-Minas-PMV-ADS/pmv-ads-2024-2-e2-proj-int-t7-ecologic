@model IEnumerable<app.Models.ViewModels.UsuarioListViewModel>


@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Usuários";
}

@if (!Model.Any())
{
    <p>Nenhum usuário encontrado.</p>
}
else
{
    <h1>Usuários</h1>

    <a asp-action="Add" class="btn btn-primary mb-3">Adicionar</a>

    <table class="table table-striped">

    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Cliente</th>
            <th>Criado em</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var usuario in Model)
            {
                <tr>

                   
                    <td>@usuario.Nome</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.ClienteNome</td>
                    <td>@usuario.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

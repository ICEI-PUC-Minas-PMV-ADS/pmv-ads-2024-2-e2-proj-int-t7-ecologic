@model app.Models.ViewModels.UsuarioUpdateViewModel

@{
    ViewData["Title"] = "Editar Usuário";
    Layout = "_ContentLayout";
}

<h1 class="mb-4">Editar Usuário</h1>

<form asp-action="Edit" style="max-width: 500px;" novalidate>
    <input type="hidden" asp-for="Id" />
    <div class="row g-3">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="GrupoPermissaoIds" class="form-label">Grupos de Permissão</label>
                <select asp-for="GrupoPermissaoIds" asp-items="Model.GruposPermissoes" class="form-select" multiple required>
                </select>
                <span asp-validation-for="GrupoPermissaoIds" class="text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ClienteId" class="form-label">Cliente</label>
                <select asp-for="ClienteId" asp-items="Model.Clientes" class="form-select" required>
                    <option value="">Selecione um cliente...</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
        </div>
        
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary flex-grow-1">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary flex-grow-1">Voltar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




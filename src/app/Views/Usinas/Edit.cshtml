@model app.Models.EditUsinaViewModel

@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Editar Usina";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<form asp-action="Edit" method="post" style="max-width: 400px;" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CapacidadeKW" class="form-label">Capacidade (KW)</label>
        <input asp-for="CapacidadeKW" class="form-control" required />
        <span asp-validation-for="CapacidadeKW" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataInicio" class="form-label">Data de Início</label>
        <input asp-for="DataInicio" class="form-control" required />
        <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StatusOperacional" class="form-label">Status Operacional</label>
        <input asp-for="StatusOperacional" class="form-control" required />
        <span asp-validation-for="StatusOperacional" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Endereco" class="form-label">Endereço</label>
        <input asp-for="Endereco" class="form-control" required />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CidadeId" class="form-label">Cidade</label>
        <select asp-for="CidadeId" asp-items="@(new SelectList(Model.Cidades, "Id", "Name"))" class="form-select" required>
            <option value="">Selecione uma cidade</option>
        </select>
        <span asp-validation-for="CidadeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ClienteId" class="form-label">Cliente</label>
        <select asp-for="ClienteId" asp-items="@(new SelectList(Model.Clientes, "Id", "Nome"))" class="form-select" required>
            <option value="">Selecione um cliente</option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FonteDeEnergiaId" class="form-label">Tipo de Energia</label>
        <select asp-for="FonteDeEnergiaId" asp-items="@(new SelectList(Model.FontesDeEnergia, "Id", "Tipo"))" class="form-select" required>
            <option value="">Selecione um tipo de energia</option>
        </select>
        <span asp-validation-for="FonteDeEnergiaId" class="text-danger"></span>
    </div>

   <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-primary flex-grow-1">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary flex-grow-1">Voltar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model app.Models.AddUsinaViewModel

@{
    Layout = "_ContentLayout";
}

<h1 class="mb-4">Adicionar Usina</h1>
<form method="post" style="max-width: 400px;" novalidate>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" id="nome" name="nome" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="capacidadeKW" class="form-label">Capacidade (KW)</label>
        <input type="number" id="capacidadeKW" name="capacidadeKW" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="dataInicio" class="form-label">Data de Início</label>
        <input type="date" id="dataInicio" name="dataInicio" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="statusOperacional" class="form-label">Status Operacional</label>
        <input type="text" id="statusOperacional" name="statusOperacional" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="endereco" class="form-label">Endereço</label>
        <input type="text" id="endereco" name="endereco" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="cidadeId" class="form-label">Cidade</label>
        <select asp-for="CidadeId" asp-items="@(new SelectList(Model.Cidades, "Id", "Name"))" class="form-select" required>
            <option value="">Selecione uma cidade</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="clienteId" class="form-label">Cliente</label>
        <select asp-for="ClienteId" asp-items="@(new SelectList(Model.Clientes, "Id", "Nome"))" class="form-select" required>
            <option value="">Selecione um cliente</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="fonteDeEnergiaId" class="form-label">Tipo de Energia</label>
        <select asp-for="FonteDeEnergiaId" asp-items="@(new SelectList(Model.FontesDeEnergia, "Id", "Tipo"))" class="form-select" required>
            <option value="">Selecione um tipo de energia</option>
        </select>
    </div>

    <div class="d-flex gap-2 mb-3">
        <button type="submit" class="btn btn-primary w-100">Salvar</button>

        <a asp-action="Index" class="btn btn-secondary w-100">Voltar</a>
    </div>

    
</form>
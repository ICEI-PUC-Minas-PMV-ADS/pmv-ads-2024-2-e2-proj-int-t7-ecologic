@model app.Models.DeleteUsinaViewModel

@{
    Layout = "_ContentLayout";
    ViewData["Title"] = "Excluir Usina";
}

<h1 class="mb-4">Excluir Usina</h1>

<div style="max-width: 400px;">
    <h3>Tem certeza que deseja excluir esta usina?</h3>
    
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input class="form-control" value="@Model.Nome" readonly />
    </div>
    
    <div class="mb-3">
        <label class="form-label">Cidade</label>
        <input class="form-control" value="@Model.CidadeNome" readonly />
    </div>
    
    <div class="mb-3">
        <label class="form-label">Cliente</label>
        <input class="form-control" value="@Model.ClienteNome" readonly />
    </div>
    
    <div class="mb-3">
        <label class="form-label">Fonte de Energia</label>
        <input class="form-control" value="@Model.FonteDeEnergiaNome" readonly />
    </div>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger w-100">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Voltar</a>
        </div>
    </form>
</div>
